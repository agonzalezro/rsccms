body {
background-image: url('images/fondo.png');
background-repeat: repeat-x;
background-color: #99dd99;
color: #5f885f;
font-family: Helvetica, Arial, sans-serif;
font-size: 12px;
}

a {
/*color: #99dd99;*/
color: white;
text-decoration: none;
}

a:hover {
text-decoration: underline;
}

#medio {
background-color: #ccffcc;
background-image: url('images/fondoCuerpo.png');
background-repeat: repeat-y;
}

#secciones span {
display: none;
}

#secciones a.noticias { background-image: url('images/novas.png'); background-repeat: no-repeat; }
#secciones a.cobertura { background-image: url('images/cobertura.png'); background-repeat: no-repeat; }
#secciones a.blogs { background-image: url('images/blogs.png'); background-repeat: no-repeat; }
#secciones a.galeria { background-image: url('images/galeria.png'); background-repeat: no-repeat; }
#secciones a.foro { background-image: url('images/foro.png'); background-repeat: no-repeat; }
#secciones a.links { background-image: url('images/ligazons.png'); background-repeat: no-repeat; }

#secciones ul {
list-style-type: none;
}

#medio {
text-align: justify;
min-height: 500px;
}


#noticias .noticia {
border-bottom: 2px dotted #5f885f;
}

#noticias .comentarios, #noticias .leermas {
font-weight: bold;
font-size: 13px;
}

#noticias h3.segunda, #noticias h3.tercera {
/*color: #99dd99;*/
color: white;
font-size: 12px;
}

p {
text-indent: 20px;
}

#loginInfo p {
text-indent: 0px;
}

#loginInfo {
border: 4px solid #5f885f;
background-color: #99dd99;
color: #5f885f;
}

#loginInfo a {
color: #5f885f;
}

#loginInfo #loginName {
list-style-type: none;
margin-left: -15px;
}

#creditos {
font-size: 10px;
}

/*-------------------------------------------------------------------------------*/
#blogs ul {
list-style-type: none;
}

#links ul,#galeria ul {
list-style-type: circle;
}

/* Para hacer la nube de tags este valor cambia: numMin,num1,num2,num3...num9,numMax -> son valores relativos dependiendo de las noticias de todos los blogs */
#blogs a.numMin, #links a.nunMin { font-size: 12px; }
#blogs a.num1, #links a.num1 { font-size: 14px; }
#blogs a.num2, #links a.num2 { font-size: 16px; }
#blogs a.num3, #links a.num3 { font-size: 18px; }
#blogs a.num4, #links a.num4 { font-size: 20px; }
#blogs a.num5, #links a.num5 { font-size: 22px; }
#blogs a.num6, #links a.num6 { font-size: 24px; }
#blogs a.num7, #links a.num7 { font-size: 26px; }
#blogs a.num8, #links a.num8 { font-size: 28px; }
#blogs a.num9, #links a.num9 { font-size: 30px; }
#blogs a.numMax, #links a.numMax { font-size: 30px; font-weight: bold;}

h1 {
background-image: url('images/logo1.png');
background-repeat: no-repeat;
}

#extraDiv2 {
background-image: url('images/esquina.png');
}


/*-------------------------------------------------------------------------------*/
h3.subir { background-image: url('images/subir.png'); background-repeat: no-repeat; }
h3.bajar { background-image: url('images/bajar.png'); background-repeat: no-repeat; }
h3.editar { background-image: url('images/editar.png'); background-repeat: no-repeat; }
h3.borrar { background-image: url('images/borrar.png'); background-repeat: no-repeat; }
