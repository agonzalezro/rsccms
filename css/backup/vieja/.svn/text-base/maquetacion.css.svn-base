/*
 * GENERAL Y MAIN
 */
h1 {
	width: 507px;
	height: 220px;
	margin-top: -8px;
	margin-left: -8px;
}

h1 a {
    display: block;
    width: 440px;
    height: 215px;
    margin-top: -8px;
    margin-left: -8px;
}

h1 span {
	display: none;
}

#secciones {
	position: absolute;
	top: 168px;
	left: 398px;
}

#secciones h2 {
	display: none;
}

#secciones li {
	display: block;
	float: left;
	padding-right: 10px;
}

#loginInfo h2,#loginInfo span {
	display: none;
}

#loginInfo input {
    display: block;
}

#loginInfo {
	position: absolute;
	right: 0px;
	top: 0px;
}

#loginInfo ul {
	padding-top: 15px;
}

#loginInfo ul a {
    padding-right: 2px;
}

#loginInfo input,#login p{
	float: right;
}

#loginInfo input.submit_login {
	display: none;
}

#loginInfo a.rexistrarme {
	margin-top: -12px;
	clear: both;
	float: right;
    padding-right: 2px;
}

#loginInfo ul {
	margin-top: -15px;
}

#loginInfo li {
	float: right;
	clear: both;
}

#loginInfo label.pass span,#loginInfo label.loginlabel span {
    display: none;
}

#loginInfo label.recordar {
	padding-top: 1px;
    padding-bottom: 0px;
    padding-right: 2px;
}

#loginInfo label.recordar span {
    margin-right: 19px;
}

#loginInfo input.recordar {
    margin-top: -13px;
    margin-bottom: 13px;
    margin-right: 0px;
}


#colaboran {
	display: none;
}


#creditos {
	display: none;
}


/*
 * MEDIO Y NOTICIAS
 */

#mensaje {
	margin-left: 40px;
	margin-right: 40px;
	padding: 10px 10px 10px 10px;
}

#medio h2 {
	display: none;
}

#noticias a.leermas {
	padding-right: 5px;
}

#noticia_comentando h3.segunda,#noticias h3.segunda {
	float: left;
	margin-top: -20px;
}


#noticia_comentando h3.tercera,#noticias h3.tercera {
	float: left;
	margin-top: -20px;
}

#noticia_comentando p, #noticias p {
    clear: both;
}

#medio {
	margin-left: 40px;
	margin-right: 40px;
}


/*
 * RESPUESTAS
 */
#noticias #respuestas h4.segunda {
	float: left;
	margin-top: -20px;
}

#noticias #respuestas h4.tercera {
	float: left;
	margin-top: -20px;
}

#noticias #respuestas p {
    clear:both;
}

#respuesta h4.tercera, #respuesta h4.tercera {
    margin-bottom: 0px;
}

#noticias #respuestas {
	margin-top: 30px;
	margin-left: 20px;
/*	margin-bottom: 30px;*/
}

#noticias #respuesta {
	padding-left: 10px;
	padding-right: 10px;
	margin-bottom: 5px;
}

#comentar_noticia label {
	display: none;
}

#noticia_comentando p.ampliado {
	margin-top: -10px;
}
